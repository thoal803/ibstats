@model IbStats.Models.Player

<h2>@if (Model.PlayerID == 0){ @("Lägg till") } else { @("Ändra") } spelare</h2>
<hr />
@using (Html.BeginForm("Save", "Player", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.HiddenFor(x => x.PlayerID)
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Name, "Namn")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(x => x.Email, "E-post")
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit" class="btn btn-success"><i class="fa fa-check">&nbsp;</i>Spara</button>
    <a href="@Url.Action("Index", "Player")" class="btn btn-default"><i class="fa fa-times">&nbsp;</i>Avbryt</a>
}