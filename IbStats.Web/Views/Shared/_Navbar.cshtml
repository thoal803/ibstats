@using System.Security.Claims

<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("IB-Stats", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        @if (Request.IsAuthenticated)
        {
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Speltillfällen", "Index", "MatchSession")</li>
                    <li>@Html.ActionLink("Spelare", "Index", "Player")</li>
                    <li>@Html.ActionLink("Spela speltillfälle", "Index", "Game")</li>

                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-fw fa-user"></span>&nbsp;&nbsp;@User.Identity.Name <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="disabled"><span class="fa fa-fw fa-cogs"></span>&nbsp;&nbsp;Byt lösenord</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("LogOff", "Account")"><span class="fa fa-fw fa-power-off"></span>&nbsp;&nbsp;Logga ut</a></li>
                        </ul>
                    </li>
                </ul>

        }
        else
        {
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action("Login", "Account")"><i class="fa fa-user fa-fw"></i>Logga in</a>
                </li>
            </ul>
        }
    </div>
</div>